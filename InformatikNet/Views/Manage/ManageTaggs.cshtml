@model InformatikNet.Models.ManageTaggsViewModel
@{
    ViewBag.Title = "Change Password";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("ManageTaggs", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Redigera Taggar</h4>
    <br />
    <p>VARNING! alla poster under taggen kommer också att bli borttagna.</p>
    <br />
    @Html.ListBoxFor(model => model.ChosenTags, new MultiSelectList(Model.Taggs, "Id", "Name"), new { size = "10", width = "1000px", id = "chosenTag"})
    <input type="submit" value="Ta bort" class = "btn btn-primary btn-large" />
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}